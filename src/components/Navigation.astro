<nav class="fixed w-full z-50 transition-all duration-700 cubic-bezier(0.16, 1, 0.3, 1) border-b border-transparent" id="navbar">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="flex justify-between items-center h-24 transition-all duration-500" id="nav-container">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center group cursor-pointer hover-spring">
                <a href="#" class="text-2xl font-serif font-bold tracking-widest flex items-center gap-2 transition-colors duration-300 text-white" id="nav-logo">
                    <i class="fas fa-leaf transform group-hover:rotate-12 transition-transform duration-500 text-brand-button"></i>
                    CEMARA
                </a>
            </div>

            <!-- Desktop Menu -->
            <div class="hidden md:flex space-x-8 items-center">
                <a href="#home" class="nav-link text-sm uppercase tracking-wider hover:text-brand-button transition-colors text-white" id="nav-item-1">Home</a>
                <a href="#building" class="nav-link text-sm uppercase tracking-wider hover:text-brand-button transition-colors text-white" id="nav-item-2">The Building</a>
                <a href="#rooms" class="nav-link text-sm uppercase tracking-wider hover:text-brand-button transition-colors text-white" id="nav-item-3">Residences</a>
                <a href="#amenities" class="nav-link text-sm uppercase tracking-wider hover:text-brand-button transition-colors text-white" id="nav-item-4">Amenities</a>
                <a href="#contact" class="btn-luxury px-8 py-3 bg-brand-button hover:bg-brand-buttonHover text-white text-sm font-medium uppercase tracking-wider rounded-sm shadow-md">
                    Book a Tour
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden flex items-center">
                <button id="mobile-menu-btn" class="text-white hover:text-brand-button transition-colors focus:outline-none p-2">
                    <i class="fas fa-bars text-2xl"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-brand-primary border-t border-brand-light/10 absolute w-full shadow-lg">
        <div class="px-4 pt-2 pb-6 space-y-1">
            <a href="#home" class="block px-3 py-3 text-white hover:text-brand-button text-base font-medium transition-colors">Home</a>
            <a href="#building" class="block px-3 py-3 text-white hover:text-brand-button text-base font-medium transition-colors">The Building</a>
            <a href="#rooms" class="block px-3 py-3 text-white hover:text-brand-button text-base font-medium transition-colors">Residences</a>
            <a href="#amenities" class="block px-3 py-3 text-white hover:text-brand-button text-base font-medium transition-colors">Amenities</a>
            <a href="#contact" class="block px-3 py-3 text-brand-button font-bold">Book a Tour</a>
        </div>
    </div>
</nav>

<script>
    const navbar = document.getElementById('navbar');
    const navContainer = document.getElementById('nav-container');
    const navItems = document.querySelectorAll('.nav-link');
    const navLogo = document.getElementById('nav-logo');
    const mobileBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            // Scrolled
            navbar?.classList.add('bg-[#103C3B]', 'shadow-md');
            navbar?.classList.remove('bg-transparent', 'border-transparent');

            navContainer?.classList.remove('h-24');
            navContainer?.classList.add('h-16');

            navLogo?.classList.add('text-white');
            navItems.forEach(item => item.classList.add('text-white'));
        } else {
            // Top
            navbar?.classList.remove('bg-[#103C3B]', 'shadow-md');
            navbar?.classList.add('bg-transparent', 'border-transparent');

            navContainer?.classList.add('h-24');
            navContainer?.classList.remove('h-16');
            
            // Note: In the reference, text is always white initially because of hero background
            // But if we scroll back up, we ensure it's white again
             navLogo?.classList.add('text-white');
             navItems.forEach(item => item.classList.add('text-white'));
        }
    });

    mobileBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });
</script>
